{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    // Schema: https://code.visualstudio.com/docs/reference/tasks-appendix
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Make",
            "type": "shell",
            "hide": false,
            "command": "make -C Debug -s -j main-build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean with Make",
            "type": "shell",
            "hide": false,
            "command": "make -C Debug -s clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Rebuild with Make",
            "type": "shell",
            "hide": false,
            "command": "make -C Debug -s clean && make -C Debug -j main-build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
